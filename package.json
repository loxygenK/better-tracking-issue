{
  "name": "better-tracking-issue",
  "version": "0.1.0",
  "private": true,
  "description": "🏁 A github action for making tracking issue more easy to manage and see",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node16 --minify",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:prettier": "prettier -c 'src/**/*.ts'",
    "lint:tsc": "tsc",
    "ci": "run-s ci:*",
    "ci:eslint": "pnpm lint:eslint --max-warnings 0",
    "ci:prettier": "pnpm lint:prettier",
    "ci:tsc": "tsc",
    "fix": "run-s fix:*",
    "fix:eslint": "pnpm lint:eslint --fix",
    "fix:prettier": "pnpm lint:prettier -w",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "loxygenK <me@f4n.dev>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/webhooks-definitions": "^3.67.3",
    "@types/diff": "^5.0.2",
    "@types/node": "^18.15.3",
    "@vercel/ncc": "^0.36.1",
    "diff": "^5.1.0",
    "eslint-config-prettier": "^8.7.0",
    "prettier": "^2.8.4",
    "typescript": "^5.0.2"
  },
  "packageManager": "pnpm@7.29.3",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "esbuild": "^0.17.12",
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.0.5"
  }
}
